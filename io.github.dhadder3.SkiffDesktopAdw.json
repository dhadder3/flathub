{
    "app-id" : "io.github.dhadder3.SkiffDesktopAdw",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "45",
    "sdk" : "org.gnome.Sdk",
    "command" : "io.github.dhadder3.SkiffDesktopAdw",
    "finish-args" : [
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc",
        "--device=dri",
        "--share=network"
    ],
    "cleanup" : [
        "/cache",
        "/man",
        "/share/aclocal",
        "/share/devhelp",
        "/lib/systemd",
        "/include",
        "/lib/pkgconfig",
        "/lib/libvala*",
        "/share/gtk-doc",
        "/share/man",
        "/share/vala",
        "*.a",
        "*.la"
    ],
    "modules" : [
        {
            "name" : "io.github.dhadder3.SkiffDesktopAdw",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : [
                "-Ddevelopment=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/dhadder3/skiffdesktop-adw.git",
                    "tag" : "0.1.1",
                    "commit" : "aa4773cec6cfce32dd9818f5537b93827423a5b6"
                }
            ],
            "modules" : [
                {
                    "name" : "blueprint-compiler",
                    "buildsystem" : "meson",
                    "sources" : [
                        {
                            "type" : "git",
                            "url" : "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                            "tag" : "v0.6.0"
                        }
                    ],
                    "cleanup": [
                    	"*"
			]
                }
            ]
        }
    ]
}
